<!-- Page Heading -->
      <section class="page-heading">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
            <h1>Nueva Fundación</h1>
            </div>
            <div class="col-md-6">
              <ul class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="#">Fundación</a></li>
                <li class="active">Ingresar nueva Fundación</li>
              </ul>
            </div>
          </div>
        </div>
      </section>


<section class="page-content">
        <div class="container">
          
          <div class="row">
            <div class="col-md-8 col-md-offset-2">

<%= form_for(@institution) do |f| %>
  <% if @institution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@institution.errors.count, "error") %> prohibited this institution from being saved:</h2>

      <ul>
      <% @institution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 				<fieldset>
                  <label>Nombre <span class="required">*</span></label>
                  <div>
                   <%= f.text_field :name, class: "form-control"%>
                  </div>
                </fieldset>

                <fieldset>
                <label>Email <span class="required">*</span></label>
                  <div>
                   <%= f.text_field :email, class: "form-control"%>
                  </div>
                </fieldset>


 
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :region %><br>
    <%= f.text_field :region %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

   				<fieldset>
                <label>Telefono<span class="required">*</span></label>
                  <div>
                   <%= f.text_field :telephone, class: "form-control"%>
                  </div>
                </fieldset>

                <fieldset>
                <label>Website<span class="required">*</span></label>
                  <div>
                   <%= f.text_field :website, class: "form-control"%>
                  </div>
                </fieldset>

                <fieldset>
                <label>Dirección <span class="required">*</span></label>
                  <div>
                   <%= f.text_field :address, class: "form-control"%>
                  </div>
                </fieldset>

                <fieldset>
                <label>NIT<span class="required">*</span></label>
                  <div>
                   <%= f.text_field :nit, class: "form-control"%>
                  </div>
                </fieldset>

                <fieldset>
                <label>Representante Legal<span class="required">*</span></label>
                  <div>
                   <%= f.text_field :legal_representant, class: "form-control"%>
                  </div>
                </fieldset>


  
  
 
   <div class="field account-sign-in">
                    <p>
                      <i class="fa fa-key"></i>

                      <%= f.submit "Subir Fundación", class: 'btn btn-primary btn-sm' %>

                    </p>

                    
                  </div>
<% end %>


<%= link_to 'Back', institutions_path %>


 </div>
          </div>

        </div>
      </section>
