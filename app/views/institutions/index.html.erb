<h1>Listing institutions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Country</th>
      <th>Region</th>
      <th>City</th>
      <th>Telephone</th>
      <th>Website</th>
      <th>Address</th>
      <th>Nit</th>
      <th>Legal representant</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.email %></td>
        <td><%= institution.country %></td>
        <td><%= institution.region %></td>
        <td><%= institution.city %></td>
        <td><%= institution.telephone %></td>
        <td><%= institution.website %></td>
        <td><%= institution.address %></td>
        <td><%= institution.nit %></td>
        <td><%= institution.legal_representant %></td>
        <td><%= link_to 'Show', institution %></td>
        <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
        <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

